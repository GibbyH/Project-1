<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.hksoftworks.users.Users" table="EMPLOYEES">
        <id name="empId" type="int">
            <column name="EMP_ID" precision="5" scale="0" />
            <generator class="assigned" />
        </id>
        <property name="lastName" type="string">
            <column name="LAST_NAME" length="15" not-null="true" />
        </property>
        <property name="firstName" type="string">
            <column name="FIRST_NAME" length="15" not-null="true" />
        </property>
        <property name="email" type="string">
            <column name="EMAIL" length="50" not-null="true" />
        </property>
        <property name="pass" type="string">
            <column name="PASS" length="15" not-null="true" />
        </property>
        <property name="managerId" type="int">
            <column name="MANAGER_ID" length="15" not-null="false" />
        </property>
    </class>
</hibernate-mapping>